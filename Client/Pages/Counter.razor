@page "/counter"

<PageTitle>Counter</PageTitle>

<MudContainer Class="mt-5" MaxWidth="MaxWidth.Small">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Current Count</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Default" OnClick="Reset" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText>@currentCount</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="IncrementCount">Increase</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void Reset()
    {
        currentCount = 0;
    }
}
